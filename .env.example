NEO4J_URI=bolt://localhost:7694
NEO4J_USER=neo4j
NEO4J_PASSWORD=
ANTHROPIC_API_KEY=
MOLTBOOK_API_KEY=
ETHOS_API_KEY=
ETHOS_RATE_LIMIT=10

# Production: disable Swagger/OpenAPI docs
# ETHOS_DISABLE_DOCS=true
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# Production: CORS_ORIGINS=https://ethos-academy.com,https://api.ethos-academy.com
CORS_ORIGINS=http://localhost:3000

# SMS notifications (optional, requires AWS credentials)
# On EC2 with IAM role: credentials auto-discovered, no keys needed
# Local dev: set these or use `aws configure`
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
ACADEMY_BASE_URL=https://ethos-academy.com

# Phone encryption (required for production, optional for dev)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ETHOS_ENCRYPTION_KEY=
