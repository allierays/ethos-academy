{
  "docker": {
    "enabled": false,
    "composeFile": "docker-compose.yml",
    "serviceName": "app",
    "execPrefix": "docker compose exec -T"
  },
  "paths": {
    "src": "ethos",
    "tests": "tests",
    "e2e": "tests/e2e"
  },
  "commands": {
    "dev": "uv run uvicorn api.main:app --reload --port 8917",
    "install": "uv sync",
    "seed": "uv run python -m scripts.seed_graph",
    "migrate": ""
  },
  "migrations": {
    "command": "",
    "pattern": ""
  },
  "checks": {
    "lint": true,
    "typecheck": true,
    "build": "final",
    "test": true,
    "requireTests": false,
    "fastapi": true
  },
  "tests": {
    "directory": "tests",
    "patterns": "test_*.py"
  },
  "api": {
    "baseUrl": "http://localhost:8917",
    "healthEndpoint": "/health",
    "timeout": 30
  },
  "playwright": {
    "enabled": true,
    "testDir": "tests/e2e",
    "projects": [
      "chromium"
    ],
    "baseUrl": "http://localhost:8917"
  },
  "verification": {
    "codeReviewEnabled": false,
    "browserEnabled": true,
    "a11yEnabled": false,
    "mobileViewport": 375,
    "screenshotOnFailure": false
  },
  "directories": {
    "backend": ".",
    "frontend": "academy"
  },
  "urls": {
    "app": "http://localhost:8917",
    "frontend": "http://localhost:3000"
  },
  "env": {
    "required": [
      "ANTHROPIC_API_KEY"
    ],
    "optional": [
      "NEO4J_URI",
      "NEO4J_USER",
      "NEO4J_PASSWORD"
    ]
  },
  "maxIterations": 20,
  "maxSessionSeconds": 600,
  "contextRotThreshold": {
    "maxStories": 15,
    "maxFilesChanged": 20
  }
}
